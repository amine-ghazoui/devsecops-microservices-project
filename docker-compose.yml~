version: '3.8'

services:
  postgres-product:
    image: 'postgres:latest'
    container_name: postgres-product
    environment:
      - 'POSTGRES_DB=products_db'
      - 'POSTGRES_PASSWORD=123456'
      - 'POSTGRES_USER=admin'
    volumes:
      - products_data:/var/lib/postgresql/data
    ports:
      - '5432:5432'
    healthcheck:
      test: [ "CMD-SHELL", "pg_isready -U admin -d products_db" ]
      interval: 10s
      timeout: 5s
      retries: 5

  postgres-command:
    image: 'postgres:latest'
    container_name: postgres-command
    environment:
      - 'POSTGRES_DB=commands_db'
      - 'POSTGRES_PASSWORD=123456'
      - 'POSTGRES_USER=admin'
    volumes:
      - commands_data:/var/lib/postgresql/data
    ports:
      - '5433:5432'
    healthcheck:
      test: [ "CMD-SHELL", "pg_isready -U admin -d commands_db" ]
      interval: 10s
      timeout: 5s
      retries: 5

  dicovery-service:
    build: ./dicovery-service
    container_name: dicovery-service
    ports:
      - "8761:8761"
    expose:
      - "8761"
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:8761/actuator/health"]
      interval: 10s
      retries: 5
      start_period: 60s

  gateway-service:
    build: ./gateway-service
    container_name: gateway-service
    ports:
      - "8888:8888"
    expose:
      - "8888"
    environment:
      DISCOVERY_SERVICE_URL: http://dicovery-service:8761/eureka
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:8888/actuator/health"]
      interval: 10s
    depends_on:
      dicovery-service:
        condition: service_healthy

  produit-service:
    build: ./produit-service
    container_name: produit-service
    ports:
      - "8081:8081"
    expose:
      - "8081"
    environment:
      DISCOVERY_SERVICE_URL: http://dicovery-service:8761/eureka
      DB_URL: jdbc:postgresql://postgres-product:5432/products_db
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:8081/actuator/health"]
      interval: 10s
      retries: 5
      start_period: 60s
    depends_on:
      dicovery-service:
        condition: service_healthy
      postgres-product:
        condition: service_healthy

  commande-service:
    build: ./commande-service
    container_name: commande-service
    ports:
      - "8082:8082"
    expose:
      - "8082"
    environment:
      DISCOVERY_SERVICE_URL: http://dicovery-service:8761/eureka
      DB_URL: jdbc:postgresql://postgres-command:5432/commands_db
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:8082/actuator/health"]
      interval: 10s
      retries: 5
      start_period: 60s
    depends_on:
      dicovery-service:
        condition: service_healthy
      produit-service:
        condition: service_healthy
      postgres-command:
        condition: service_healthy

volumes:
  products_data:
  commands_data:

networks:
  microservices-network:
    driver: bridge
